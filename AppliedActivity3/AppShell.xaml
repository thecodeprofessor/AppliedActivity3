<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppliedActivity3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppliedActivity3"
    xmlns:views="clr-namespace:AppliedActivity3.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="Students">
        <ShellContent
            Title="Students"
            ContentTemplate="{DataTemplate views:StudentsPage}"
            Route="StudentsPage" />
    </FlyoutItem>
    <FlyoutItem Title="Courses">
        <ShellContent
            Title="Courses"
            ContentTemplate="{DataTemplate views:CoursesPage}"
            Route="CoursesPage" />
    </FlyoutItem>
   
</Shell>
